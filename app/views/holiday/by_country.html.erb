<h1>Listing Holiday</h1>
<div id="content">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% Holiday.where(country_id: @country.id).each do |h| %>
        <tr>
          <td><%= h.name %></td>
          <td><%= h.date %></td>
          <td><%= link_to 'Edit', edit_holiday_path(h) %></td>
          <td><%= link_to 'Destroy', h, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <% Holiday.where(country_id: nil).each do |h| %>
        <tr>
          <td><%= h.name %></td>
          <td><%= h.date %></td>
          <td><%= link_to 'Edit', edit_holiday_path(h) %></td>
          <td><%= link_to 'Destroy', h, method: :delete, data: { confirm: 'This is an international holiday, are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>
<br />
<%= link_to "New Holiday", new_holiday_path %>
</div>
<br>

